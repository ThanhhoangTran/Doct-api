{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "./src/*"
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["ES2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/*"
  },
  "exclude": ["node_modules"]
}
